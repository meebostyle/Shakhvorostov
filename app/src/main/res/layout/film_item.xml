<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:background="@drawable/shape"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:layout_marginHorizontal="16dp"
        android:layout_height="93dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="15dp"
        >





    <ImageView
        android:id="@+id/cvFilmImg"
        android:clipToOutline="true"
        android:layout_width="40dp"
        android:layout_height="63dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="4dp"
        android:background="@drawable/image_corners"
        />
    <TextView
        android:id="@+id/tvFilmName"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvFilmImg"


        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"

        android:textColor="@color/black"

        tools:text="Чёрный Адам"
        />
    <TextView
        android:id="@+id/tvShortDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvFilmImg"



        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp"


        android:textColor="@color/grey"
        android:textSize="14sp"
        tools:text="Фантастика (2016)"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
